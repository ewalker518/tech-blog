<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class="card">
        <div class="card-header">
          <h3><a class="post-link" href="/post/{{id}}">{{title}}</a></h3>
          <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
          <p class="card-body">{{content}}</p>
      </div>
    {{/each}}
</section>