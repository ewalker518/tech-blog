<div class="card">
    <h3 class="card-header">{{post.title}}</h3>

    <div class="card">
        <div class="card-header">
            <h3><a class="post-link" href="/post/{{id}}">{{title}}</a></h3>
            <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
        <div class="card">
            <p>{{post.content}}</p>
        </div>

        {{#each comment}}
        <div class="card comment">
            <h4 class="card-header">Comments:</h4>
            <div class="content">
                {{comment_text}}
            </div>
            <div>
                {{user.username}}, {{format_date created_at}}
            </div>
        </div>
        {{/each}}
    </div>

    <form class="card-body comment-form" id="comment-form">

        <label class="form-label">Leave a Comment</label>
        <input id="comment" name="comment-body" class="form-input" />

        <button type="submit" class="btn">Submit</button>
    </form>
</div>